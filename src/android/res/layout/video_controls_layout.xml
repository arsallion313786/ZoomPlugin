<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_video_control_layout"
    android:gravity="center"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/mute_action_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/icon_mute_cross"
        android:visibility="visible"
        app:backgroundTint="@color/colorBlack"
        app:fabSize="mini" />

    <ImageView
        android:id="@+id/local_video_action_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/icon_cross_camera"
        android:visibility="visible"
        app:backgroundTint="@color/colorBlack"
        app:fabSize="mini" />

    <ImageView
        android:id="@+id/switch_camera_action_fab_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/icon_swtich_camera"
        android:visibility="gone"
        app:backgroundTint="@color/colorBlack"
        app:fabSize="mini" />

    <ImageView
        android:id="@+id/speaker_action_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_volume_on"
        android:visibility="visible"
        app:backgroundTint="@color/colorBlack"
        app:fabSize="mini" />


    <ImageView
        android:id="@+id/icon_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/icon_chat"
        app:backgroundTint="@color/colorBlack"
        app:fabSize="mini" />


    <ImageView
        android:id="@+id/icon_call_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/icon_call_end"
        app:backgroundTint="@color/colorBlack"
        app:fabSize="mini" />


</LinearLayout>