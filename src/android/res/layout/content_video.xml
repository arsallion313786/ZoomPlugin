<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:showIn="@layout/activity_video"
    android:background="@color/colorBlack">

    <us.zoom.sdk.ZoomVideoSDKVideoView
        android:id="@+id/primary_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/waiting_message_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlack"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:visibility="gone" />
    </us.zoom.sdk.ZoomVideoSDKVideoView>

<!--    <us.zoom.sdk.ZoomVideoSDKVideoView-->
<!--        android:id="@+id/thumbnail_video_view"-->
<!--        android:visibility="gone"-->
<!--        android:layout_width="140dp"-->
<!--        android:layout_height="210dp"-->

<!--        android:layout_marginHorizontal="20dp"-->
<!--        android:layout_marginBottom="120dp"-->
<!--        android:layout_gravity="bottom|end"/>-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="120dp"
        android:layout_gravity="bottom|end">

        <us.zoom.sdk.ZoomVideoSDKVideoView
            android:id="@+id/thumbnail_video_view"
            android:visibility="gone"
            android:layout_width="140dp"
            android:layout_height="210dp" />

        <ImageView
            android:id="@+id/switch_camera_action_fab"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:visibility="gone"
            android:layout_alignTop="@id/thumbnail_video_view"
            android:layout_alignEnd="@id/thumbnail_video_view"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_switch_camera_icon_circle_arrow"
            app:backgroundTint="@color/colorBlack"
            app:fabSize="mini" />

    </RelativeLayout>

	<us.zoom.sdk.ZoomVideoSDKVideoView
        android:id="@+id/secondary_thumbnail_video_view"
        android:visibility="gone"
        android:layout_width="96dp"
        android:layout_height="128dp"

        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="120dp"

        android:layout_gravity="bottom|end">

    </us.zoom.sdk.ZoomVideoSDKVideoView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/status_margin"
        android:layout_gravity="bottom|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/identity_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/status_margin"
            android:layout_gravity="bottom|center"
            android:orientation="vertical"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:text=""/>

        <TextView
            android:id="@+id/video_status_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/status_margin"
            android:layout_gravity="center|center"
            android:background="@color/colorBlack"
            android:orientation="vertical"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:text=""/>

    </LinearLayout>




</FrameLayout>
