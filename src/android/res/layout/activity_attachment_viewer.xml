<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- For Image Previews -->
    <WebView
        android:id="@+id/webview_viewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- For PDF Previews -->
    <ImageView
        android:id="@+id/pdf_image_view_viewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="PDF Preview"
        android:visibility="gone" />

    <!-- PDF Navigation Controls -->
    <RelativeLayout
        android:id="@+id/pdf_navigation_controls_viewer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#80000000"
        android:padding="8dp"
        android:visibility="gone">

        <Button
            android:id="@+id/pdf_button_previous_viewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Previous" />

        <TextView
            android:id="@+id/pdf_page_number_viewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/pdf_button_next_viewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Next" />
    </RelativeLayout>

    <!-- A simple close button -->
    <Button
        android:id="@+id/close_button_viewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:text="Close" />

</RelativeLayout>
